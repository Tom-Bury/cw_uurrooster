<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="hours_style">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="room_style">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="course_title_style">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="day_separator_style">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
